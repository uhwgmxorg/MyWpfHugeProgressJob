<Window x:Class="MyWpfHugeProgressJob.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfHugeProgressJob"
        mc:Ignorable="d"
        Title="MyWpfHugeProgressJob" Height="220" Width="400" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>

        <Button Name="button_Start_Task" Content="Start Task" ToolTip="Start the TheHugeJob()" ToolTipService.ShowDuration="0x7FFFFFFF" HorizontalAlignment="Right" Margin="0,0,10,85" VerticalAlignment="Bottom" Width="75" Click="Button_Start_Click"/>
        <Button Name="button_Cancel_Task"  Content="Cancel Task" ToolTip="Cancel the TheHugeJob()" ToolTipService.ShowDuration="0x7FFFFFFF" HorizontalAlignment="Right" Margin="0,0,10,60" VerticalAlignment="Bottom" Width="75" Click="Button_Cancel_Click"/>
        <Button Content="Toggle" ToolTip="Toggle the Progress Bar Window" ToolTipService.ShowDuration="0x7FFFFFFF" HorizontalAlignment="Right" Margin="0,0,10,35" VerticalAlignment="Bottom" Width="75" Click="Button_Toggle_Click"/>
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Button_Close_Click"/>
    </Grid>
</Window>
